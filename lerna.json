{
  "packages": ["packages/*", "vscode-extensions/*", "documents"],
  "npmClient": "npm",
  "version": "independent",
  "command": {
    "publish": {
      "message": "chore(release): publish [skip ci]",
      "registry": "https://registry.npmjs.org"
    }
  },
  "ignoreChanges": [
    "**/__test__/**",
    "**/__demo__/**",
    "**/__snapshots__/**",
    ".vscode/**",
    "**/solar-theme/**"
  ],
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
