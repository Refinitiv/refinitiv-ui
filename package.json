{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "documents"
  ],
  "engines": {
    "node": ">=16.11.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "lerna": "lerna",
    "build": "nx run-many --target build --parallel --all",
    "build:affected": "nx affected:build --parallel",
    "build:docs": "nx run @refinitiv-ui/docs:build",
    "build:prod": "nx run-many --target build:prod --all",
    "start": "node cli.mjs start",
    "start:docs": "nx run @refinitiv-ui/docs:start",
    "test": "node cli.mjs test",
    "test:affected": "nx affected:test",
    "test:all": "nx affected:test --all",
    "lint": "node cli.mjs lint",
    "lint:affected": "nx affected:lint --parallel",
    "lint:all": "nx affected:lint --parallel --all",
    "lint-fix": "node cli.mjs lint:fix",
    "lint-fix:all": "nx run-many --target lint:fix --parallel --all",
    "reset": "nx reset",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@nrwl/cli": "latest",
    "@nrwl/tao": "latest",
    "@nrwl/workspace": "latest",
    "@web/dev-server": "^0.1.38",
    "@web/dev-server-esbuild": "^0.3.6",
    "@web/test-runner": "^0.15.3",
    "@web/test-runner-browserstack": "^0.5.1",
    "@web/test-runner-playwright": "^0.9.0",
    "chalk": "^4.1.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.1.0",
    "deepmerge": "^4.2.2",
    "fast-glob": "^3.2.5",
    "husky": "^8.0.0",
    "lerna": "^5.5.2",
    "lint-staged": "^13.0.0",
    "micromatch": "^4.0.4",
    "request": "^2.88.2",
    "sinon": "^9.2.4",
    "typescript": "^4.8.3",
    "web-component-analyzer": "2.0.0-next.4",
    "yargs": "^17.0.1"
  }
}
