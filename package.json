{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "documents"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "lerna": "lerna",
    "build": "nx run-many --target build",
    "build:affected": "nx affected:build",
    "build:docs": "nx run @refinitiv-ui/docs:build",
    "build:docs:dev": "nx run @refinitiv-ui/docs:build:dev",
    "build:prod": "nx run-many --target build:prod",
    "clean": "npm run reset && nx run-many --target clean",
    "format": "prettier --write '**/*.{js,mjs,ts,css,less,json,html,yml,md}' --ignore-unknown",
    "start": "node cli start",
    "start:docs": "nx run @refinitiv-ui/docs:start",
    "test": "node cli test",
    "test:affected": "nx affected:test",
    "test:all": "nx run-many --target test",
    "lint": "node cli lint",
    "lint:affected": "eslint scripts && nx affected:lint",
    "lint:all": "eslint scripts && nx run-many --target lint",
    "lint-fix": "node cli lint:fix",
    "lint-fix:all": "eslint scripts --fix && nx run-many --target lint:fix",
    "reset": "nx reset",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@formatjs/intl-getcanonicallocales": "^2.3.0",
    "@formatjs/intl-locale": "^3.4.3",
    "@formatjs/intl-numberformat": "^8.9.0",
    "@formatjs/intl-pluralrules": "^5.2.10",
    "@open-wc/karma-esm": "^4.0.0",
    "@web/dev-server": "^0.1.17",
    "@web/dev-server-legacy": "^0.1.7",
    "chalk": "^4.1.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.1.0",
    "deepmerge": "^4.3.1",
    "es-dev-server": "^2.1.0",
    "escape-string-regexp": "^5.0.0",
    "fast-glob": "^3.3.2",
    "husky": "^8.0.3",
    "karma": "^6.4.2",
    "karma-browserstack-launcher": "^1.6.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-edge-launcher": "^0.4.2",
    "karma-firefox-launcher": "^2.1.3",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-mocha-snapshot": "^0.2.1",
    "karma-snapshot": "^0.6.0",
    "karma-source-map-support": "^1.4.0",
    "lerna": "^7.3.1",
    "lint-staged": "^13.0.0",
    "micromatch": "^4.0.5",
    "nx": "^16.10.0",
    "request": "^2.88.2",
    "sinon": "^9.2.4",
    "typescript": "^4.8.3",
    "web-component-analyzer": "2.0.0",
    "yargs": "^17.7.2"
  }
}
