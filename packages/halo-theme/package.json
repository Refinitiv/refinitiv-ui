{
  "name": "@refinitiv-ui/halo-theme",
  "version": "5.2.0",
  "description": "Official theme for Refinitiv products",
  "author": "Refinitiv",
  "license": "SEE LICENSE IN LICENSE",
  "main": "index.less",
  "repository": {
    "type": "git",
