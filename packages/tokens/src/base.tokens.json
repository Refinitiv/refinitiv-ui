{
  "brand": {
    "color": {
      "$value": "{cyan.900}"
    }
  },
  "primary": {
    "color": {
      "$value": "{brand.color}"
    }
  },
  "text": {
    "header": {
      "font-family": {
        "$value": "{font.family.header}"
      },
      "color": {
        "$value": "{grey.900}"
      },
      "size": {
        "$value": "{font.size.x-large}"
      }
    },
    "sub-header": {
      "font-family": {
        "$value": "{font.family.header}"
      },
      "color": {
        "$value": "{grey.900}"
      },
      "size": {
        "$value": "{font.size.large}"
      }
    },
    "body": {
      "font-family": {
        "$value": "{font.family.body}"
      },
      "color": {
        "$value": "{grey.800}"
      },
      "hover": {
        "color": {
          "$value": "{grey.900}"
        }
      },
      "size": {
        "$value": "{font.size.small}"
      }
    },
    "selection": {
      "color": {
        "$value": "{text.body.color}"
      },
      "background": {
        "color": {
          "$value": "{primary.color}"
        }
      }
    },
    "disabled": {
      "color": {
        "$value": "{grey.500}"
      }
    }
  },
  "background": {
    "default": {
      "$value": "{grey.100}"
    },
    "empathize": {
      "$value": "{grey.200}"
    }
  },
  "font": {
    "size": {
      "$type": "dimension",
      "xx-small": {
        "$value": "10px"
      },
      "x-small": {
        "$value": "12px"
      },
      "small": {
        "$value": "14px"
      },
      "medium": {
        "$value": "16px"
      },
      "large": {
        "$value": "20px"
      },
      "x-large": {
        "$value": "24px"
      },
      "xx-large": {
        "$value": "36px"
      },
      "xxx-large": {
        "$value": "48px"
      }
    },
    "family": {
      "$type": "fontFamily",
      "header": {
        "$value": [
          "Georgia",
          "serif"
        ]
      },
      "body": {
        "$value": [
          "Verdana",
          "sans-serif"
        ]
      }
    },
    "weight": {
      "$type": "fontWeight",
      "default": {
        "$value": 400
      },
      "bold": {
        "$value": 600
      }
    }
  },
  "size": {
    "$type": "dimension",
    "form-border": {
      "$value": "1px"
    },
    "xxx-small": {
      "$value": "8px"
    },
    "xx-small": {
      "$value": "10px"
    },
    "x-small": {
      "$value": "16px"
    },
    "small": {
      "$value": "20px"
    },
    "medium": {
      "$value": "24px"
    },
    "large": {
      "$value": "30px"
    },
    "x-large": {
      "$value": "36px"
    },
    "xx-large": {
      "$value": "48px"
    },
    "xxx-large": {
      "$value": "72px"
    },
    "xxxx-large": {
      "$value": "144px"
    }
  },
  "space": {
    "$type": "dimension",
    "xxx-small": {
      "$value": "2px"
    },
    "xx-small": {
      "$value": "4px"
    },
    "x-small": {
      "$value": "8px"
    },
    "small": {
      "$value": "12px"
    },
    "medium": {
      "$value": "16px"
    },
    "large": {
      "$value": "20px"
    },
    "x-large": {
      "$value": "28px"
    },
    "xx-large": {
      "$value": "36px"
    },
    "xxx-large": {
      "$value": "48px"
    }
  },
  "border-radius": {
    "$type": "dimension",
    "sharp": {
      "$value": "0px"
    },
    "pill": {
      "$value": "20rem"
    },
    "curve": {
      "$value": "4px"
    },
    "circle": {
      "$value": "50%"
    }
  },
  "transition": {
    "$type": "duration",
    "quickly": {
      "$value": "200ms"
    },
    "slowly": {
      "$value": "200ms"
    }
  },
  "control": {
    "color": {
      "$value": "{text.body.color}"
    },
    "height": {
      "$value": "{size.medium}"
    },
    "width": {
      "$value": "{size.xxxx-large}"
    },
    "padding": {
      "$value": "{space.xx-small}"
    },
    "border-radius": {
      "$value": "{border-radius.sharp}"
    },
    "border-color": {
      "$type": "color",
      "$value": "{grey.400}"
    },
    "border-style": {
      "$type": "strokeStyle",
      "$value": "solid"
    },
    "border-width": {
      "$value": "{size.form-border}"
    },
    "border": {
      "$type": "border",
      "$value": {
        "color": "{control.border-color}",
        "width": "{control.border-width}",
        "style": "{control.border-style}"
      }
    },
    "background": {
      "color": {
        "$value": "{background.default}"
      }
    },
    "disabled": {
      "color": {
        "$value": "{text.disabled.color}"
      },
      "background": {
        "color": {
          "$value": "{control.background.color}"
        }
      },
      "border-color": {
        "$value": "{grey.300}"
      }
    },
    "readonly": {
      "color": {
        "$value": "{text.disabled.color}"
      },
      "background": {
        "color": {
          "$value": "{control.background.color}"
        }
      },
      "border-color": {
        "$value": "{grey.300}"
      }
    },
    "focus": {
      "color": {
        "$value": "{primary.color}"
      },
      "background": {
        "color": {
          "$value": "{control.background.color}"
        }
      },
      "border-color": {
        "$value": "{control.focus.color}"
      }
    },
    "hover": {
      "color": {
        "$value": "{text.body.hover.color}"
      },
      "background": {
        "color": {
          "$value": "{control.background.color}"
        }
      },
      "border-color": {
        "$value": "{control.focus.color}"
      }
    },
    "error": {
      "color": {
        "$type": "color",
        "$value": "red"
      },
      "background": {
        "color": {
          "$value": "{control.background.color}"
        }
      },
      "border-color": {
        "$value": "{control.error.color}"
      },
      "hover": {
        "color": {
          "$type": "color",
          "$value": "pink"
        },
        "background": {
          "color": {
            "$value": "{control.background.color}"
          }
        },
        "border-color": {
          "$value": "{control.error.hover.color}"
        }
      }
    },
    "warning": {
      "color": {
        "$type": "color",
        "$value": "rgb(204, 160, 0)"
      },
      "background": {
        "color": {
          "$value": "{control.background.color}"
        }
      },
      "border-color": {
        "$value": "{control.warning.color}"
      },
      "hover": {
        "color": {
          "$type": "color",
          "$value": "rgb(255, 233, 153)"
        },
        "background": {
          "color": {
            "$value": "{control.background.color}"
          }
        },
        "border-color": {
          "$value": "{control.warning.hover.color}"
        }
      }
    }
  }
}
