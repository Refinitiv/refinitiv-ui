{
  "brand": {
    "color": {
      "$value": "{cyan.900}"
    }
  },
  "primary": {
    "color": {
      "$value": "{brand.color}"
    }
  },
  "text": {
    "header": {
      "color": {
        "$value": "{grey.900}"
      }
    },
    "body": {
      "color": {
        "$value": "{grey.800}"
      }
    },
    "selection": {
      "color": {
        "$value": "{text.body.color}"
      },
      "background": {
        "color": {
          "$value": "{primary.color}"
        }
      }
    },
    "disabled": {
      "color": {
        "$value": "{grey.700}"
      }
    }
  },
  "background": {
    "color": {
      "$value": "{grey.100}"
    }
  },
  "font": {
    "size": {
      "$type": "dimension",
      "$value": "14px"
    },
    "family": {
      "$type": "fontFamily",
      "$value": [
        "Verdana",
        "sans-serif"
      ]
    }
  },
  "transition": {
    "duration": {
      "$type": "duration",
      "$value": "200ms"
    }
  },
  "control": {
    "size": {
      "$type": "dimension",
      "$value": "24px"
    },
    "padding": {
      "$type": "dimension",
      "$value": "4px"
    },
    "radius": {
      "$type": "dimension",
      "$value": "0px"
    },
    "border": {
      "$type": "border",
      "$value": {
        "color": "{grey.400}",
        "width": "1px",
        "style": "solid"
      }
    },
    "background": {
      "color": {
        "$value": "{background.color}"
      }
    },
    "disabled": {
      "color": {
        "$value": "{text.disabled.color}"
      },
      "background": {
        "color": {
          "$value": "{control.background.color}"
        }
      },
      "border": {
        "color": {
          "$type": "color",
          "$value": "{grey.300}"
        }
      }
    },
    "readonly": {
      "color": {
        "$value": "{text.disabled.color}"
      },
      "background": {
        "color": {
          "$value": "{control.background.color}"
        }
      },
      "border": {
        "color": {
          "$value": "{grey.300}"
        }
      }
    },
    "focus": {
      "color": {
        "$value": "{primary.color}"
      },
      "border": {
        "$type": "border",
        "$value": {
          "color": "{control.focus.color}",
          "width": "1px",
          "style": "solid"
        }
      }
    },
    "hover": {
      "border": {
        "$type": "border",
        "$value": {
          "color": "{control.focus.color}",
          "width": "1px",
          "style": "solid"
        }
      }
    },
    "error": {
      "color": {
        "$type": "color",
        "$value": "red"
      },
      "hover": {
        "color": {
          "$type": "color",
          "$value": "pink"
        }
      }
    },
    "warning": {
      "color": {
        "$type": "color",
        "$value": "rgb(204, 160, 0)"
      },
      "hover": {
        "color": {
          "$type": "color",
          "$value": "rgb(255, 233, 153)"
        }
      }
    }
  },
  "field": {
    "color": {
      "$value": "{text.body.color}"
    },
    "background": {
      "color": {
        "$value": "{background.color}"
      }
    },
    "height": {
      "$value": "{control.size}"
    },
    "width": {
      "$type": "dimension",
      "$value": "152px"
    },
    "padding": {
      "$value": "{control.padding}"
    },
    "radius": {
      "$value": "{control.radius}"
    },
    "border": {
      "$value": "{control.border}"
    },
    "focus": {
      "border": {
        "$value": "{control.focus.border}"
      }
    },
    "icon": {
      "focus" :{
        "border": {
          "$value": "{control.focus.border}"
        },
        "radius": {
          "$value": "{control.radius}"
        }
      }
    },
    "disabled": {
      "color": {
        "$value": "{control.disabled.color}"
      },
      "background": {
        "color": {
          "$value": "{control.disabled.background.color}"
        }
      },
      "border": {
        "$type": "border",
        "$value": {
          "color": "{control.disabled.border.color}",
          "width": "1px",
          "style": "solid"
        }
      }
    },
    "readonly": {
      "color": {
        "$value": "{control.readonly.color}"
      },
      "background": {
        "color": {
          "$value": "{control.readonly.background.color}"
        }
      },
      "border": {
        "$type": "border",
        "$value": {
          "color": "{control.readonly.border.color}",
          "width": "1px",
          "style": "solid"
        }
      }
    },
    "hover": {
      "border": {
        "$value": "{control.hover.border}"
      }
    },
    "error": {
      "border": {
        "$type": "border",
        "$value": {
          "color": "{control.error.color}",
          "width": "1px",
          "style": "solid"
        }
      },
      "hover": {
        "border": {
          "$type": "border",
          "$value": {
            "color": "{control.error.hover.color}",
            "width": "1px",
            "style": "solid"
          }
        }
      }
    },
    "warning": {
      "border": {
        "$type": "border",
        "$value": {
          "color": "{control.warning.color}",
          "width": "1px",
          "style": "solid"
        }
      },
      "hover": {
        "border": {
          "$type": "border",
          "$value": {
            "color": "{control.warning.hover.color}",
            "width": "1px",
            "style": "solid"
          }
        }
      }
    }
  },
  "checkbox": {
    "size": {
      "$value": "{control.size}"
    },
    "padding": {
      "$value": "{control.padding}"
    },
    "border": {
      "$value": "{control.border}"
    },
    "radius": {
      "$value": "{control.radius}"
    },
    "focus": {
      "border": {
        "$value": "{control.focus.border}"
      }
    },
    "disabled": {
      "color": {
        "$value": "{control.disabled.color}"
      },
      "border": {
        "$type": "border",
        "$value": {
          "color": "{control.disabled.border.color}",
          "width": "1px",
          "style": "solid"
        }
      }
    }
  },
  "overlay": {
    "background": {
      "color": {
        "$value": "{background.color}"
      }
    },
    "opacity": {
      "$value": "0.6"
    },
    "box-shadow": {
      "$value": "rgb(0 0 0 / 25%) 0px 2px 8px"
    }
  },
  "item": {
    "size": {
      "$value": "{control.size}"
    },
    "padding": {
      "$value": "{control.padding}"
    },
    "focus": {
      "border": {
        "$value": "{control.focus.border}"
      },
      "background": {
        "color": {
          "$value": "{primary.color}"
        }
      }
    }
  }
}
