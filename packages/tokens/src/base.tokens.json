{
  "brand": {
    "color": {
      "$value": "{cyan.900}"
    }
  },
  "primary": {
    "color": {
      "$value": "{brand.color}"
    }
  },
  "text": {
    "header": {
      "color": {
        "$value": "{grey.900}"
      }
    },
    "body": {
      "color": {
        "$value": "{grey.800}"
      }
    },
    "selection": {
      "color": {
        "$value": "{text.body.color}"
      },
      "background": {
        "color": {
          "$value": "{primary.color}"
        }
      }
    },
    "disabled": {
      "color": {
        "$value": "{grey.500}"
      }
    }
  },
  "background": {
    "color": {
      "$value": "{grey.100}"
    }
  },
  "font": {
    "size": {
      "$type": "dimension",
      "$value": "14px"
    },
    "family": {
      "$type": "fontFamily",
      "$value": [
        "Verdana",
        "sans-serif"
      ]
    },
    "weight": {
      "default": {
        "$type": "fontWeight",
        "$value": 500
      },
      "bold": {
        "$type": "fontWeight",
        "$value": 600
      }
    }
  },
  "transition": {
    "duration": {
      "$type": "duration",
      "$value": "200ms"
    }
  },
  "control": {
    "size": {
      "$type": "dimension",
      "$value": "24px"
    },
    "padding": {
      "$type": "dimension",
      "$value": "4px"
    },
    "radius": {
      "$type": "dimension",
      "$value": "0px"
    },
    "border": {
      "$type": "border",
      "$value": {
        "color": "{grey.400}",
        "width": "1px",
        "style": "solid"
      }
    },
    "background": {
      "color": {
        "$value": "{background.color}"
      }
    },
    "disabled": {
      "color": {
        "$value": "{text.disabled.color}"
      },
      "background": {
        "color": {
          "$value": "{control.background.color}"
        }
      },
      "border": {
        "color": {
          "$type": "color",
          "$value": "{grey.300}"
        }
      }
    },
    "readonly": {
      "color": {
        "$value": "{text.disabled.color}"
      },
      "background": {
        "color": {
          "$value": "{control.background.color}"
        }
      },
      "border": {
        "color": {
          "$value": "{grey.300}"
        }
      }
    },
    "focus": {
      "color": {
        "$value": "{primary.color}"
      },
      "border": {
        "$type": "border",
        "$value": {
          "color": "{control.focus.color}",
          "width": "1px",
          "style": "solid"
        }
      }
    },
    "hover": {
      "border": {
        "$type": "border",
        "$value": {
          "color": "{control.focus.color}",
          "width": "1px",
          "style": "solid"
        }
      }
    },
    "error": {
      "color": {
        "$type": "color",
        "$value": "red"
      },
      "hover": {
        "color": {
          "$type": "color",
          "$value": "pink"
        }
      }
    },
    "warning": {
      "color": {
        "$type": "color",
        "$value": "rgb(204, 160, 0)"
      },
      "hover": {
        "color": {
          "$type": "color",
          "$value": "rgb(255, 233, 153)"
        }
      }
    }
  },
  "field": {
    "color": {
      "$value": "{text.body.color}"
    },
    "background": {
      "color": {
        "$value": "{background.color}"
      }
    },
    "height": {
      "$value": "{control.size}"
    },
    "width": {
      "$type": "dimension",
      "$value": "152px"
    },
    "padding": {
      "$value": "{control.padding}"
    },
    "radius": {
      "$value": "{control.radius}"
    },
    "border": {
      "$value": "{control.border}"
    },
    "focus": {
      "border": {
        "$value": "{control.focus.border}"
      }
    },
    "icon": {
      "focus" :{
        "border": {
          "$value": "{control.focus.border}"
        },
        "radius": {
          "$value": "{control.radius}"
        }
      }
    },
    "disabled": {
      "color": {
        "$value": "{control.disabled.color}"
      },
      "background": {
        "color": {
          "$value": "{control.disabled.background.color}"
        }
      },
      "border": {
        "$type": "border",
        "$value": {
          "color": "{control.disabled.border.color}",
          "width": "1px",
          "style": "solid"
        }
      }
    },
    "readonly": {
      "color": {
        "$value": "{control.readonly.color}"
      },
      "background": {
        "color": {
          "$value": "{control.readonly.background.color}"
        }
      },
      "border": {
        "$type": "border",
        "$value": {
          "color": "{control.readonly.border.color}",
          "width": "1px",
          "style": "solid"
        }
      }
    },
    "hover": {
      "border": {
        "$value": "{control.hover.border}"
      }
    },
    "error": {
      "border": {
        "$type": "border",
        "$value": {
          "color": "{control.error.color}",
          "width": "1px",
          "style": "solid"
        }
      },
      "hover": {
        "border": {
          "$type": "border",
          "$value": {
            "color": "{control.error.hover.color}",
            "width": "1px",
            "style": "solid"
          }
        }
      }
    },
    "warning": {
      "border": {
        "$type": "border",
        "$value": {
          "color": "{control.warning.color}",
          "width": "1px",
          "style": "solid"
        }
      },
      "hover": {
        "border": {
          "$type": "border",
          "$value": {
            "color": "{control.warning.hover.color}",
            "width": "1px",
            "style": "solid"
          }
        }
      }
    }
  },
  "checkbox": {
    "size": {
      "$value": "{control.size}"
    },
    "padding": {
      "$value": "{control.padding}"
    },
    "border": {
      "$value": "{control.border}"
    },
    "radius": {
      "$value": "{control.radius}"
    },
    "focus": {
      "border": {
        "$value": "{control.focus.border}"
      }
    },
    "disabled": {
      "color": {
        "$value": "{control.disabled.color}"
      },
      "border": {
        "$type": "border",
        "$value": {
          "color": "{control.disabled.border.color}",
          "width": "1px",
          "style": "solid"
        }
      }
    }
  },
  "overlay": {
    "background": {
      "color": {
        "$value": "{background.color}"
      }
    },
    "opacity": {
      "$value": "0.6"
    },
    "box-shadow": {
      "$type": "shadow",
      "$value": {
        "color": "rgb(0 0 0 / 25%)",
        "offsetX": "0px",
        "blur": "2px",
        "spread": "8px"
      }
    }
  },
  "item": {
    "color": {
      "$value": "{text.body.color}"
    },
    "min-height": {
      "$value": "{control.size}"
    },
    "icon": {
      "margin": {
        "$value": "0.5em"
      }
    },
    "padding": {
      "$value": "{control.padding}"
    },
    "selected": {
      "color": {
        "$value": "white"
      }
    },
    "focus": {
      "color": {
        "$value": "white"
      },
      "border": {
        "$value": "{control.focus.border}"
      },
      "background": {
        "color": {
          "$value": "{primary.color}"
        }
      }
    },
    "header": {
      "color": {
        "$value": "{grey.700}"
      },
      "background": {
        "color": {
          "$value": "{background.color}"
        }
      },
      "font": {
        "size": {
          "$type": "dimension",
          "$value": "0.8em"
        },
        "weight": {
          "$type": "fontWeight",
          "$value": "{font.weight.bold}"
        }
      }
    },
    "divider": {
      "background": {
        "$value": "linear-gradient(rgb(64, 64, 64), rgb(64, 64, 64)) 0px center / calc(100% - 0px) 1px no-repeat"
      },
      "height": {
        "$value": "5px"
      }
    },
    "disabled": {
      "color": {
        "$value": "{text.disabled.color}"
      }
    }
  },
  "select": {
    "list": {
      "max-width": {
        "$value": "300px"
      }
    }
  }
}
